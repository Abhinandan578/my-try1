{
  "manifest_version": 2,
  "name": "A chrome extension plugin",
  "description": "Some descriptive text.",
  "version": "3.8",
  "browser_action": {
   "default_icon": "icon.png",
   "default_popup": "login_ext.html"
  },
  "permissions": [
   "tabs",
   "activeTab",
   "cookies"
   ],
  "background": {
    "scripts": ["background.js"]
  },
  "web_accessible_resources": ["injected_script.js"],
  "content_scripts": [
    {
      "matches":["https://*/*", "https://*/*"],
      "js": ["content_script.js"],
      "all_frames": true
    }
  ]
}